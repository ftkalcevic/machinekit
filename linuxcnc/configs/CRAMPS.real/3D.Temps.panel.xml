<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
  <hbox>
    <label>
      <text>"Extruder Temp:"</text>
    </label>
    <number>
      <halpin>"E0.Temp.set"</halpin>
      <format>"3.1f"</format>
    </number>
  </hbox>
  <bar>
    <halpin>"E0.pwm"</halpin>
    <max_>1.0</max_>
    <fillcolor>"red"</fillcolor>
    <bgcolor>"light grey"</bgcolor>
    <hidelabels>True</hidelabels>
    <barheight>7</barheight>
    <canvasheight>7</canvasheight>
  </bar>
   <bar>
    <halpin>"E0.Temp"</halpin>
     <max_>300</max_>
  </bar>
 <hbox>
    <label>
      <text>"Bed Temp:"</text>
    </label>
    <number>
      <halpin>"Bed.Temp.set"</halpin>
      <format>"3.1f"</format>
    </number>
  </hbox>
  <bar>
    <halpin>"Bed.pwm"</halpin>
    <max_>1.0</max_>
    <fillcolor>"red"</fillcolor>
    <bgcolor>"light grey"</bgcolor>
    <hidelabels>True</hidelabels>
    <barheight>7</barheight>
    <canvasheight>7</canvasheight>
  </bar>
   <bar>
    <halpin>"Bed.Temp"</halpin>
    <max_>300</max_>
  </bar>
  <hbox>
    <label text="Probe: " />
    <led>
      <halpin>"LED.Probe"</halpin>
      <on_color>"green"</on_color>
      <off_color>"dark green"</off_color>
    </led>
  </hbox>
  <hbox>
    <label text="At Temp: " />
    <led>
      <halpin>"LED.AtTemp"</halpin>
      <on_color>"red"</on_color>
      <off_color>"dark red"</off_color>
    </led>
  </hbox>
  <hbox>
    <label text="Elapsed Time:" />
    <u32>
        <halpin>"elapsed.hours"</halpin>
        <format>"d"</format>
    </u32>
    <u32>
        <halpin>"elapsed.mins"</halpin>
        <format>"02d"</format>
    </u32>
    <u32>
        <halpin>"elapsed.secs"</halpin>
        <format>"02d"</format>
    </u32>
    <button>
        <halpin>"elapsed.reset"</halpin>
        <text>"Reset"</text>
    </button>
  </hbox>
</pyvcp>
